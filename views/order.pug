extends base

block content
    main.main
        .card-container
            each order in orders 
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/plots/${order.plot.imageCover}`, alt=`${order.plot.name}`)
                        h3.heading-tertirary
                            span= order.plot.name

                    .card__details
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= `${order.price} Euro per kg` 
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span= `${order.createdAt.toLocaleDateString()}` 
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span= `Total of ${order.price * order.quantity} Euro`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span= `${order.createdAt.getHours() - 1}hrs${order.createdAt.getMinutes()}min`
                    .card__footer
                        p.card__ratings
                        a.btn.btn--green.btn--small(href=`/plot/${order.plot.slug}`) Plot Details 