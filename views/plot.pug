extends base
include _reviewCard

mixin overviewBox(label, text, icon)
    .overview-box__detail
        svg.overview-box__icon
            use(xlink:href=`/img/icons.svg#icon-${icon}`)
        span.overview-box__label= label
        span.overview-box__text= text

block content
    section.section-header
        .header__hero
            .header__hero-overlay &nbsp;
            img.header__hero-img(src=`/img/plots/${plot.imageCover}`, alt=`${plot.name}`)

        .heading-box
            h1.heading-primary
                span= plot.name
            .heading-box__group
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-clock')
                    span.heading-box__text= `${plot.size} square metres`
                .heading-box__detail
                    svg.heading-box__icon
                        use(xlink:href='/img/icons.svg#icon-map-pin')
                    span.heading-box__text= plot.location.description

    section.section-description
        .overview-box
            div
                .overview-box__group
                    h2.heading-secondary.ma-bt-lg Quick facts

                    +overviewBox('Next Harvest', 'October 2022', 'calendar')
                    +overviewBox('Expected Quantity', `${plot.trees*20} kg`, 'trending-up')
                    +overviewBox('Trees', `${plot.trees}`, 'user')
                    +overviewBox('Rating', `${plot.ratingsAverage}/5`, 'star')

                .overview-box__group
                    h2.heading-secondary.ma-bt-lg The Vištica OPG members
                    .overview-box__detail
                        img.overview-box__img(src='/img/users/user-19.jpg', alt='Father')
                        span.overview-box__label Father
                        span.overview-box__text Zdravko Vištica
                    .overview-box__detail
                        img.overview-box__img(src='/img/users/user-18.jpg', alt='Son')
                        span.overview-box__label Son
                        span.overview-box__text Stanko Vištica
                    .overview-box__detail
                        img.overview-box__img(src='/img/users/user-17.jpg', alt='Son')
                        span.overview-box__label Son
                        span.overview-box__text Josip Vištica

        .description-box
            h2.heading-secondary.ma-bt-lg= `About the ${plot.name} plot` 
            p.description__text= plot.description


    section.section-pictures
        .picture-box
            img.picture-box__img.picture-box__img--1(src=`/img/plots/${plot.images[0]}`, alt=`${plot.name} 1`)
        .picture-box
            img.picture-box__img.picture-box__img--2(src=`/img/plots/${plot.images[1]}`, alt=`${plot.name} 2`)
        .picture-box
            img.picture-box__img.picture-box__img--3(src=`/img/plots/${plot.images[2]}`, alt=`${plot.name} 3`)

    section.section-map
        #map(data-locations=`${JSON.stringify(plot.location)}`)
        #name(data-name=`${JSON.stringify(plot.name)}`)

    section.section-reviews
        .reviews
            each review in plot.reviews
                +reviewCard(review)

    section.section-cta
        .cta
            img.cta__img.cta__img--1(src=`/img/plots/${plot.images[1]}`, alt='')
            img.cta__img.cta__img--2(src=`/img/plots/${plot.images[2]}`, alt='')
            .cta__content
                h2.heading-secondary What are you waiting for?
                p.cta__text Vitamin C. Infinite memories. Make it yours today!

                if user
                    button.btn.btn--green.span-all-rows#order-plot(data-plot-id=`${plot.id}`) Buy now!
                else
                    a.btn.btn--green.span-all-rows(href='/login') Log in to order