extends base

block content
    main.main
        .card-container
            //- loops through the plots array and prints a card for each plot
            each plot in plots 
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`/img/plots/${plot.imageCover}`, alt=`${plot.name}`)
                        h3.heading-tertirary
                            span= plot.name

                    .card__details
                        h4.card__sub-heading= `${plot.soilType} | ${plot.size} metres square plot`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= plot.location.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span October 2022
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span= plot.trees
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${plot.trees*20} kg`

                    .card__footer
                        p
                            span.card__footer-value $1
                            span.card__footer-text  per kg
                        p.card__ratings
                            span.card__footer-value= plot.ratingsAverage
                            span.card__footer-text= ` Rating (${plot.ratingsQuantity})`
                        a.btn.btn--green.btn--small(href=`/plot/${plot.slug}`) Details 